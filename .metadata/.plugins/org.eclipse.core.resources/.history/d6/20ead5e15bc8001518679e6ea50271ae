package test;

import java.io.File;
import java.io.FileInputStream;
import java.io.FileOutputStream;
import java.io.FileReader;
import java.io.FileWriter;
import java.io.IOException;
import java.io.ObjectInputStream;
import java.io.ObjectOutputStream;

public class OjbectWriteTest
{
	public static Object loadTree(String fileName) // File Input
	{
		try
		{

			FileInputStream fileInput = new FileInputStream(fileName);
			ObjectInputStream objectInput = new ObjectInputStream(fileInput); 
			Object obj = objectInput.readObject();
			objectInput.close();
			return obj;

		}
		catch(Exception e)
		{
			e.printStackTrace();
			return null;
		}
	}
	public static void saveTree(Object obj, String fileName) // File Output
	{
		try
		{

			FileOutputStream fileOut = new FileOutputStream(fileName);
			ObjectOutputStream objectOut = new ObjectOutputStream(fileOut);
			objectOut.writeObject(obj);
			objectOut.close();

		}
		catch(Exception e)
		{
			e.printStackTrace();
		}
	}
	
	public static void write(String fileName, String toWrite) throws IOException
	{

	      File file = new File(fileName);
	      // creates the file
	      file.createNewFile();
	      // creates a FileWriter Object
	      FileWriter writer = new FileWriter(file); 
	      // Writes the content to the file
	      writer.write(toWrite); 
	      writer.flush();
	      writer.close();

	}
	
	public static Object read(String fileName) throws IOException
	{
		//Creates a FileReader Object
		File file = new File(fileName);
		FileReader fr = new FileReader(file); 
		char [] a = new char[50];
		fr.read(a); // reads the content to the array
		for(char c : a)
			System.out.print(c); //prints the characters one by one
		fr.close();
		return fileName;
	}
	public static void main(String[] args) throws IOException
	{
		write("TestWrite.txt"/*);//,*/ "Hi, This, Is, Test");

	}

}
